@using Soenneker.Quark.Headings.Enums
@inherits Soenneker.Quark.Components.Element

@if (Size == HeadingSize.S1)
{
    <h1 @attributes="BuildAttributes()">@ChildContent</h1>
}
else if (Size == HeadingSize.S2)
{
    <h2 @attributes="BuildAttributes()">@ChildContent</h2>
}
else if (Size == HeadingSize.S3)
{
    <h3 @attributes="BuildAttributes()">@ChildContent</h3>
}
else if (Size == HeadingSize.S4)
{
    <h4 @attributes="BuildAttributes()">@ChildContent</h4>
}
else if (Size == HeadingSize.S5)
{
    <h5 @attributes="BuildAttributes()">@ChildContent</h5>
}
else if (Size == HeadingSize.S6)
{
    <h6 @attributes="BuildAttributes()">@ChildContent</h6>
}
else
{
    <h3 @attributes="BuildAttributes()">@ChildContent</h3>
}

@code {
    /// <summary>
    /// Gets or sets the heading size.
    /// </summary>
    [Parameter] 
    public HeadingSize Size { get; set; } = HeadingSize.S3;
}
