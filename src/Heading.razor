@using Soenneker.Quark.Enums
@inherits Soenneker.Quark.Element

@if (Scale?.ToString() == "scale-1")
{
    <h1 @attributes="BuildAttributes()" >@ChildContent</h1>
}
else if (Scale?.ToString() == "scale-2")
{
    <h2 @attributes="BuildAttributes()" >@ChildContent</h2>
}
else if (Scale?.ToString() == "scale-3")
{
    <h3 @attributes="BuildAttributes()" >@ChildContent</h3>
}
else if (Scale?.ToString() == "scale-4")
{
    <h4 @attributes="BuildAttributes()" >@ChildContent</h4>
}
else if (Scale?.ToString() == "scale-5")
{
    <h5 @attributes="BuildAttributes()" >@ChildContent</h5>
}
else if (Scale?.ToString() == "scale-6")
{
    <h6 @attributes="BuildAttributes()" >@ChildContent</h6>
}
else
{
    <h3 @attributes="BuildAttributes()" >@ChildContent</h3>
}

@code {

    /// <summary>
    /// Gets or sets the heading size.
    /// </summary>
    [Parameter]
    public CssValue<ScaleBuilder>? Scale { get; set; }

    public override string? Name { get; set; } = "Heading";

}
